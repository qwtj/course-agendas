#!/bin/zsh

if [ $# -ne 1 ]; then
  echo "Usage: $0 <filename>"
  exit 1
fi

filename="$1"
content_description_file="prompts/create_mindmap.txt"
synopsis_file="${filename}-mindmap.md"

if [ ! -f "$content_description_file" ]; then
  echo "Error: Content description file '$content_description_file' not found."
  exit 1
fi

if [ -p /dev/stdin ]; then
  content=$(cat /dev/stdin)
else
  echo "Error: No input provided via stdin."
  exit 1
fi

echo "$(cat "$content_description_file")$content" | ask > "$synopsis_file"

echo "Synopsis created: $synopsis_file"

exit 0
